<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/tic_tac_toe_background"
    tools:context=".Controller.fragment.tic_tac_toe.TicTacToeFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:padding="32dp"
        android:textSize="28dp"
        android:textColor="@color/dark"
        android:gravity="top|center"
        android:text="Game: Tic Tac Toe"></TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/button_1_1"
            android:layout_width="80dp"
            android:layout_height="80dp"

            ></ImageButton>

        <ImageButton
            android:id="@+id/button_1_2"
            android:layout_width="80dp"
            android:layout_height="80dp"></ImageButton>

        <ImageButton
            android:id="@+id/button_1_3"
            android:layout_width="80dp"
            android:layout_height="80dp"></ImageButton>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/button_2_1"
            android:layout_width="80dp"
            android:layout_height="80dp"></ImageButton>

        <ImageButton
            android:id="@+id/button_2_2"
            android:layout_width="80dp"
            android:layout_height="80dp"></ImageButton>

        <ImageButton
            android:id="@+id/button_2_3"
            android:layout_width="80dp"
            android:layout_height="80dp"></ImageButton>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/button_3_1"
            android:layout_width="80dp"
            android:layout_height="80dp"></ImageButton>

        <ImageButton
            android:id="@+id/button_3_2"
            android:layout_width="80dp"
            android:layout_height="80dp"></ImageButton>

        <ImageButton
            android:id="@+id/button_3_3"
            android:layout_width="80dp"
            android:layout_height="80dp"></ImageButton>
    </LinearLayout>

</LinearLayout>